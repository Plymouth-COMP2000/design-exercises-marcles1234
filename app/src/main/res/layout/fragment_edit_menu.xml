<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment"
    android:background="#4C6444">


    <TextView
        android:id="@+id/editMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Edit Dish"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/backButton"
        android:id="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infoText"/>

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/textview_border"
        android:layout_margin="16dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/editMenuTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/deleteMenuButton"/>

    <ScrollView
        android:id="@+id/editMenuScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="@id/infoText"
        app:layout_constraintBottom_toBottomOf="@id/infoText"
        app:layout_constraintEnd_toEndOf="@id/infoText"
        app:layout_constraintStart_toStartOf="@id/infoText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/updateMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:text="Save changes"
                style="@style/buttons"
                app:layout_constraintTop_toTopOf="@id/container"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container" />


            <EditText
                android:id="@+id/dishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:hint="Enter dish name"
                android:background="@drawable/textview_border"
                android:drawableRight="@drawable/pen"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container"
                app:layout_constraintTop_toBottomOf="@id/updateMenuButton"/>

            <EditText
                android:id="@+id/dishType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:hint="Enter dish type"
                android:background="@drawable/textview_border"
                android:drawableRight="@drawable/pen"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container"
                app:layout_constraintTop_toBottomOf="@id/dishName"/>

            <EditText
                android:id="@+id/dishDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:hint="Enter dish description"
                android:background="@drawable/textview_border"
                android:drawableRight="@drawable/pen"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container"
                app:layout_constraintTop_toBottomOf="@id/dishType"/>

            <EditText
                android:id="@+id/dishPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:hint="Enter dish price"
                android:background="@drawable/textview_border"
                android:drawableRight="@drawable/pen"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container"
                app:layout_constraintTop_toBottomOf="@id/dishDescription"/>

            <EditText
                android:id="@+id/dishAllergens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:hint="Enter dish Allergens"
                android:background="@drawable/textview_border"
                android:drawableRight="@drawable/pen"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container"
                app:layout_constraintTop_toBottomOf="@id/dishPrice"/>

            <EditText
                android:id="@+id/dishImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:hint="Enter dish Image"
                android:background="@drawable/textview_border"
                android:drawableRight="@drawable/pen"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintEnd_toEndOf="@id/container"
                app:layout_constraintTop_toBottomOf="@id/dishAllergens"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/deleteMenuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:text="Delete Dish"
        style="@style/buttons"
        app:layout_constraintTop_toBottomOf="@id/editMenuScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/infoText"
        app:layout_constraintEnd_toEndOf="@id/infoText" />

</androidx.constraintlayout.widget.ConstraintLayout>