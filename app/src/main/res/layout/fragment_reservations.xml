<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <TextView
        android:id="@+id/reservationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="20sp"
        android:text="Reservations"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfwayGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

    <TextView
        android:id="@+id/reservationsText1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/textview_border"
        android:padding="20dp"
        android:text="My Reservations\n\n\nDisplay reservation table here"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeStepGranularity="1sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reservationsTitle"
        app:layout_constraintBottom_toTopOf="@id/halfwayGuideline"/>

    <TextView
        android:id="@+id/addReservationText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/textview_border"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/halfwayGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a Reservation"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/addReservationText"
        app:layout_constraintStart_toStartOf="@id/addReservationText"
        app:layout_constraintEnd_toEndOf="@id/addReservationText"
        app:layout_constraintBottom_toBottomOf="@id/addReservationText"/>
    <Button
        android:id="@+id/editReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Reservation"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintStart_toStartOf="@id/reservationsText1"
        app:layout_constraintEnd_toEndOf="@id/reservationsText1"
        app:layout_constraintBottom_toTopOf="@id/removeReservation"/>
    <Button
        android:id="@+id/removeReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Reservation"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintStart_toStartOf="@id/reservationsText1"
        app:layout_constraintEnd_toEndOf="@id/reservationsText1"
        app:layout_constraintBottom_toBottomOf="@id/reservationsText1"/>

</androidx.constraintlayout.widget.ConstraintLayout>