<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">


    <TextView
        android:id="@+id/addResTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="20sp"
        android:text="Edit a Reservation"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/textview_border"
        android:layout_margin="16dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/addResTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfwayGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/selectReservationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeStepGranularity="1sp"
        android:text="Select Reservation to Edit:"
        app:layout_constraintTop_toTopOf="@id/infoText"
        app:layout_constraintStart_toStartOf="@id/infoText"
        />

    <TableLayout
        android:id="@+id/reservationTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textview_border"
        app:layout_constraintTop_toBottomOf="@id/selectReservationText">
        <TableRow>
            <TextView
                android:text="Name"
                android:padding="8dp" />
            <TextView
                android:text="Date"
                android:padding="8dp" />
            <TextView
                android:text="Time"
                android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Example1"
                android:padding="8dp" />
            <TextView
                android:text="20/10/2025"
                android:padding="8dp" />
            <TextView
                android:text="2PM"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/futureDateList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:padding="16sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeStepGranularity="1sp"
        android:text="Date V"
        app:layout_constraintStart_toStartOf="@id/infoText"
        app:layout_constraintEnd_toStartOf="@id/futureTimeList"
        app:layout_constraintTop_toBottomOf="@id/halfwayGuideline" />
    <TextView
        android:id="@+id/futureTimeList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:layout_marginTop="20dp"
        android:padding="16sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeStepGranularity="1sp"
        android:text="Date V"
        app:layout_constraintStart_toEndOf="@id/futureDateList"
        app:layout_constraintEnd_toStartOf="@id/futureGuestsList"
        app:layout_constraintTop_toBottomOf="@id/halfwayGuideline" />
    <TextView
        android:id="@+id/futureGuestsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:padding="16sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeStepGranularity="1sp"
        android:text="Guests V"
        app:layout_constraintStart_toEndOf="@id/futureTimeList"
        app:layout_constraintTop_toBottomOf="@id/halfwayGuideline"
        app:layout_constraintEnd_toEndOf="@id/infoText"/>

    <Button
        android:id="@+id/confirmEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Edits"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/infoText"
        app:layout_constraintEnd_toEndOf="@id/infoText"
        app:layout_constraintBottom_toBottomOf="@id/infoText"/>

</androidx.constraintlayout.widget.ConstraintLayout>